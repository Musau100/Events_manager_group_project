<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="0dp">

        <!--top layout-->
        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/designerProfile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:adjustViewBounds="true"
                android:src="@drawable/designer" />

            <!--<ImageView-->
                <!--android:contentDescription="Designer's Profile Photo"-->
                <!--android:id="@+id/designerProfile"-->
                <!--android:layout_width="100dp"-->
                <!--android:layout_height="100dp"-->
                <!--android:adjustViewBounds="true"-->
                <!--android:src="@drawable/designer" />-->

            <TextView
                android:id="@+id/designerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/designerProfile"
                android:layout_toRightOf="@id/designerProfile"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:paddingRight="5dp"
                android:paddingEnd="5dp"
                android:text="Designer Name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/primary_text_light_nodisable"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:paddingRight="5dp"
                android:paddingEnd="5dp"
                android:layout_below="@id/designerName"
                android:layout_toEndOf="@id/designerProfile"
                android:layout_toRightOf="@id/designerProfile"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="Description :\n Description \n Description \n Description" />



        </RelativeLayout>



    </android.support.v7.widget.CardView>


</LinearLayout>
